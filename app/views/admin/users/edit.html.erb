<% @title = "ユーザーアカウント編集" %>
<div class="page-title">
<h1><%= @title %></h1>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_with model: @user, url: [ :admin, @user] do |f| %> 
        
        <div class="field">
            <%= f.label :username, "ユーザー名", class: "label" %>
            <%= f.text_field :username, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :email, "メールアドレス", class: "label" %>
            <%= f.text_field :email, class: "input" %>
          </div>
          
          <div class="field">
            <%= f.check_box :suspended %>
            <%= f.label :suspended, "アカウント停止"%>
          </div>
          
          <div class="field">
            <%= f.check_box :administrator %>
            <%= f.label :administrator, "管理者"%>
          </div>
          
          <div class="none">
          <%= f.submit "更新", class: "button is-success" %>
          <%= link_to "キャンセル", :admin_users,  class: "button is-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>