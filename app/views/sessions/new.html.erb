<% @title = "ログイン" %>

<div id="login-form">
  <h1><%= "Catalksへ#{@title}" %></h1>
  
  <% if @form.errors.any? %>
  <div class="notification is-danger">
    <ul>
      <% @form.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
  
  <%= form_with model: @form, url: :session do |form| %>
    <div>
      <%= form.label :email, "メールアドレス"  %>
      <%= form.text_field :email %>
    </div>
    <div>
      <%= form.label :password, "パスワード" %>
      <%= form.password_field :password %>
    </div>
    <div>
      <%= form.submit "ログイン" %> 
    </div>
    <div>
      <%= link_to "キャンセル", :root %>
    </div>
  <% end %>
</div>