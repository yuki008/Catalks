
<% @title = "ユーザー一覧" %>
<div class="page-title">
<h1>ユーザー一覧</h1>
</div>
<div class="non">
<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% @users.each do |user| %>
        <div class="column is-3">
          <div class="card">
            <div class="card-content">
              <div class="card-image">
                <figure class="image">
                  <% if  user.image? %>
                <img src="<%= user.image %>" alt="ユーザーアイコン">
              <% else %>
                <img src="/assets/no-image.png" alt="ユーザーアイコン" >
              <% end %>
                </figure>
              </div>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-content">
                  
                  <div class="title"><%= link_to user.username, user %></div>
        
                </div>
              </div>
              <div class="content">
                投稿数：<%= user.articles.count %>
              </div>
            </div>
          </div>
        </div>
      
      <% end %>
    </div>
  </div>
</section>
</div>

